<div class="main_div">
<%= form_with(model: @article, local: true, html: {multipart: true}) do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% article.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :age %><br>
    <%= form.textarea :age %><br>
    <% article.errors.full_messages_for(:age).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :email %><br>
    <%= form.textarea :email %><br>
    <% article.errors.full_messages_for(:email).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :image %><br>
    <%= form.file_field :image %> <!-- For single image -->
    
  </div>

  <div>
    <%= form.submit %>
  </div>
<%end%>
</div>
