<h1>New Article</h1>

<%= form_with model: @article do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @article.errors.full_messages_for(:name).each do |message| %>
    <div><%= message %></div>
  </div>
  <% end %>

  <div>
    <%= form.label :age %><br>
    <%= form.text_field :age %>
    <% @article.errors.full_messages_for(:age).each do |message| %>
    <div><%= message %></div>
  </div>
  <% end %>

  <div>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
    <% @article.errors.full_messages_for(:email).each do |message| %>
    <div><%= message %></div>
    <% end %>

  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
